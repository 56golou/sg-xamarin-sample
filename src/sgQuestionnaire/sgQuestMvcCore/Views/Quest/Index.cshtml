@model sgQuestMvcCore.Models.Quest

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="join" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="radio" asp-for="join" value="1" /> 参加
                <input type="radio" asp-for="join" value="2" /> 不参加
                <input type="radio" asp-for="join" value="3" /> どちらともいえない
                <span asp-validation-for="join" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="horoscope" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="horoscope" class="form-control" asp-items="ViewBag.horoscopes"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="memo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="memo" class="form-control" />
                <span asp-validation-for="memo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

